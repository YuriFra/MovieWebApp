@page
@model MovieApp.Pages.Theaters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Theater[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theater[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theater[0].StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theater[0].City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Theater) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TheaterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TheaterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TheaterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
