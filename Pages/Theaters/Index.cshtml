@page
@using MovieApp.Models
@model MovieApp.Pages.Theaters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Overview</h1>

<p>
    <a asp-page="Create" class="btn btn-primary mb-1">Add a theater</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Theaters[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theaters[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theaters[0].StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theaters[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theaters[0].Movies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Theaters)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @foreach (var movie in item.Movies)
                {
                    @movie.Title<br />
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TheaterId" class="btn btn-primary">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.TheaterId" class="ml-1 btn btn-outline-success">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.TheaterId" class="ml-1 btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
